{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
        "types": ["node"],
        "module": "ES2015",
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "jsx": "react"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
